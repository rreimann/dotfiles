export IQGEN_HOME=/Users/rr/develop/rms/ude/tools/iQgen
export UDE_HOME=/Users/rr/develop/rms/ude/
export BYTEMAN_HOME=~/develop/tools/byteman-2.1.0
export FORGE_HOME=~/develop/tools/forge
export NODE_PATH=/usr/local/lib/node_modules

export JAVA_HOME=`/usr/libexec/java_home --version 1.7`
export CLASSPATH='/Users/rr/develop/db2_driver/db2jcc4.jar:/Users/rr/develop/db2_driver/db2jcc_license_cu.jar:'
export ANT_OPTS='-Xmx501m -XX:MaxPermSize=256m'
export MAVEN_OPTS='-client -Xmx768m -XX:MaxPermSize=512m'
export JAVA_TOOL_OPTIONS='-Dfile.encoding=ISO-8859-1'
export PATH=/usr/local/bin:$PATH:$FORGE_HOME/bin:$BYTEMAN_HOME/bin:/Users/rr/develop/bin:

# prefer updated coreutils - installed via brew
export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"

# Make vim the default editor
export EDITOR="vim"

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help"

# Prefer US English and use UTF-8
# export LANG="en_US"
# export LC_ALL="en_US.UTF-8"

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Always enable colored `grep` output
export GREP_OPTIONS="--color=auto"

# Link Homebrew casks in `/Applications` rather than `~/Applications`
export HOMEBREW_CASK_OPTS="--appdir=/Applications"
